<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.beerdroid.beta"
      android:versionCode="1"
      android:versionName="1.0">

    <application
    	android:icon="@drawable/icon"
    	android:debuggable="true"
    	android:label="@string/app_name">
        <activity android:name=".BeerDroid"
                  android:label="@string/app_name"
                  android:launchMode="singleTop"
                  android:theme="@style/LightTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
        	<meta-data android:name="android.app.searchable"
        	           android:resource="@xml/searchable"></meta-data>
		</activity>
        <activity android:name=".BeerDetails"
                  android:label="@string/beer_details_name"
                  android:theme="@style/LightTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
                  
		</activity>
                  
		<activity android:name=".Preferences"
	              android:label="Preferences" />
	<!-- Declare the default searchable Activity -->
    <meta-data android:name="android.app.default_searchable" 
               android:value=".BeerDroid"></meta-data>

	<provider android:name="com.beerdroid.provider.BeerProvider" android:authorities="com.beerdroid.provider.beerprovider"></provider>
</application>
    
    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="10"/>

	<uses-permission android:name="android.permission.INTERNET"/>
</manifest> 