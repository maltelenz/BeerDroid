<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content" 
              android:orientation="vertical" >
              
	<TextView android:id="@+id/beer_name" xmlns:android="http://schemas.android.com/apk/res/android"
    	android:textColor="#000000"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    	
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content" 
              android:orientation="horizontal" >
	<TextView android:id="@+id/beer_brewery" xmlns:android="http://schemas.android.com/apk/res/android"
    	android:textColor="#000000"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingRight="10dp"/>
	<TextView android:id="@+id/beer_rating" xmlns:android="http://schemas.android.com/apk/res/android"
    	android:textColor="#000000"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
</LinearLayout>
</LinearLayout>